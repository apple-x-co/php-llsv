{
    "name": "maison/ltsv",
    "description": "",
    "type": "library",
    "license":"MIT",
    "authors": [
        {
            "name": "Kouhei Sano",
            "email": "apple.x.co@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "bear/qatools": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Maison\\Ltsv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maison\\Ltsv\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "tests": [
            "@cs",
            "@qa",
            "@test"
        ],
        "qa": [
            "phpmd src text ./phpmd.xml",
            "phpstan analyse --no-progress",
            "psalm --no-progress"
        ],
        "coverage": [
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "phpcs"
        ],
        "cs-fix": [
            "phpcbf"
        ],
        "metrics": [
            "phpmetrics --report-html=build/metrics --exclude=Exception src"
        ]
    },
    "scripts-descriptions": {
        "test": "Run unit tests"
    },
    "config": {
        "process-timeout": 0
    }
}
